{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@app/components/*": [ "src/components/*" ],
      "@app/i18n/*": [ "src/i18n/*" ],
      "@app/lib/*": [ "src/lib/*" ],
      "@app/middleware/*": [ "src/middleware/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "src",
    "**/*.tsx",
    "**/*.jsx"
  ]
}
